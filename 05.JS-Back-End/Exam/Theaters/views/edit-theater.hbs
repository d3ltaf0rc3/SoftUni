<main>
    <form class="theater-form" action="/plays/edit/{{_id}}" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" placeholder="Image Url" value="{{imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" name="isPublic" id="check-box" {{isPublic}}>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>